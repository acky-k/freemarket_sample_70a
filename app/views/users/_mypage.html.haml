.mypage
  .mypage__header
    = render "/items/header"
  .mypage__breadcrumbs
    = render "/items/bread-crumbs"
  .mypage__main
    .clearfix
      .mypage__main__content
        .mypage__main__content__upper
          profile
        .mypage__main__content__downer
          %ul
            %li.title お知らせ
            %li.post お知らせは特にありません
      .mypage__main__side
        %p マイページ
        %ul.mypage__main__side__upper
          %li お知らせ
          %li いいね！一覧
          %li 出品する
          %li 下書き一覧
          %li 出品した商品 - 出品中
          %li 出品した商品 - 取引中
          %li 出品した商品 - 売却済み
          %li 購入した商品 - 取引中
          %li 購入した商品 - 過去の取引
          %li ニュース一覧
          %li 評価一覧
          %li ガイド
          %li お問い合わせ
        %ul.mypage__main__side__downer
          %p 設定
          %li プロフィール
          %li 発送元・お届け先住所変更
          %li 支払い方法
          %li メール/パスワード
          %li 本人情報
          %li 電話番号の確認
          %li ログアウト
  .mypage__subfooter
    = render "/items/subfooter"
  .mypage__footer
    = render "/items/footer"
.button
  = render "/items/exhibit-btn"
