-# 商品出品ページ メインコンテンツ

.head-logo
  =image_tag '/assets/logo.png', class:"logo"

.seller
  .seller__in
    .seller__in__item
      = form_for [@item] do |f|
      .seller__in__item__image
        .seller__in__item__image__text
          %h2 出品画像
          %span 必須
        .seller__in__item__image__images
          %p 最大3枚までアップロードできます
        .form
          %label
            = icon('fas', 'camera', class: 'icon')
            %input.form-file{type: "file", maximage: "3", name: "avatar", accept: ".png, .jpg, .jpeg, .pdf, .doc"}
      .seller__in__item__name
        .seller__in__item__name__text
          %h2 商品名
          %span 必須
        .seller__in__item__name__message
          %input.seller__in__item__name__message__input{name: "item", placeholder: "40文字まで", type: "text", value: "", maxlength: "40", required: "required"}/

    .seller__in__details
      .seller__in__details__text
        %h2 商品説明
        %span 必須
      .seller__in__details__product
        -# =form_for @item do |f|
        %textarea{class: 'seller__in__details__product__input', placeholder: '商品の説明。(必須 1,000文字以内)&#13;&#10;(色、素材、重さ、低下、注意点など)&#13;&#10;&#13;&#10;例）2010年ごろに1万円で購入したジャケットです。&#13;&#10; 食べ物をこぼしてしまい、目立つ汚れがあります。'.html_safe, cols:'40', rows:'4', type: 'text', value: '', maxlength: '1000', required: 'required'}
    .seller__in__genre
      .seller__in__genre__title
        %P 商品の詳細
      .seller__in__genre__categoly
        %h2 カテゴリー
        %span 必須

        -# ↓  ！！！！！！"seller__in__genre__input__box", id:"select-category"は変更しないでください！！！！！！
      .seller__in__genre__input  
        = form_with category: @parents, class:"seller__in__genre__input__box", id:"select-category", remote: true do |f|
          = f.select :category, @category_parent_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}

      .seller__in__genre__brand
        %p ブランド（任意）
        %input.seller__in__genre__brand__input{name: "brand", placeholder: "例）シャネル", type: "text", value: ""}/
    .seller__in__status
      .seller__in__status__item
        %h2 商品の状態
        %span 必須
      .seller__in__status__input
        %select.seller__in__status__input__text{name: "itemnstatus", placeholder: "商品の状態を入力してください。", type: "text", value: "", required: "required"}
          %option{:value => "0"} 選択してください
          %option{:value => "1"} 新品、未使用
          %option{:value => "2"} 未使用に近い
          %option{:value => "3"} 目立った傷や汚れなし
          %option{:value => "4"} やや傷や汚れあり
          %option{:value => "5"} 傷や汚れあり
          %option{:value => "6"} 全体的に状態が悪い
    .seller__in__delivery
      .seller__in__delivery__title
        配送について
        = icon('fas', 'question-circle', class: 'question')
      .seller__in__delivery__pattern
        %h2 配送料の負担
        %span 必須
      .seller__in__delivery__way
        %select.seller__in__delivery__way__input{name: "delivery", placeholder: "選択してください。", type: "text", value: "", required: "required"}
          %option{:value => "0"} 選択してください　　　　　　　　　　　
          %option{:value => "1"} 送料込み（出品者負担）
          %option{:value => "2"} 着払い(購入者負担)
      .seller__in__delivery__area
        %h2 発送元の地域
        %span 必須
      .seller__in__delivery__input
        %select.seller__in__delivery__input__area{name: "area", placeholder: "選択してください。", type: "text", value: "", required: "required"}
          %option{:value => "0"} 選択してください　　　　　　　　　　　
          %option{:value => "1"} 北海道
          %option{:value => "2"} 青森県
          %option{:value => "3"} 岩手県
          %option{:value => "4"} 宮城県
