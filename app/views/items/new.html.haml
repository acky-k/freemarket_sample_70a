      .seller__in__delivery__day
        .seller__in__delivery__day__date 
          %h2 発送までの日数
          %span 必須
        .seller__in__delivery__day__input
          %select.seller__in__delivery__day__input__text{type: "number", name: "date", min: "1", required: "required"}
            %option{:value => "0"} 選択してください　　　　　　　　　　　
            %option{:value => "1"} 1~2日で発送
            %option{:value => "2"} 2~3日で発送
            %option{:value => "3"} 4~7日で発送
    .seller__in__price
      .seller__in__price__title
        価格　(¥300~9,999,999)
        = icon('fas', 'question-circle', class: 'question')
      %ul.seller__in__price__item
        %li.seller__in__price__item__list
          %h2 販売価格
          %span 必須
        %li.seller__in__price__item__list
          =label_tag (:"¥")
          %input{type: "number", name: "price", max: "9999999", min: "300", value: "0", required: "required"}
      %ul.seller__in__price__tax
        %li 販売手数料　(10％）
        %li ー
      %ul.seller__in__price__fee
        %li 販売利益
        %li ー

    .seller__in__sale
      %input.seller__in__sale__input{type: "submit", value: "出品する"}
      %input.seller__in__sale__draft{type: "submit", value: "下書きに保存"} 
    .seller__in__retern
      = link_to "もどる","#",class: "retern"
    .seller__in__promise
      禁止されている
      =link_to "行為","#"
      および
      =link_to "出品物","#"
      を必ずご確認ください。
      =link_to "偽ブランド品","#"
      や
      =link_to "盗品物","#"
      などの販売は犯罪であり、法律により処罰される可能性があります。また、出品を持ちまして
      =link_to "加盟店規約","#"
      に同意したことになります。
  .seller__rule
    %ul.seller__rule__text
      %li 
      =link_to "プライバシーポリシー","#"
      %li
      =link_to "フリマ利用規約","#"
      %li
      =link_to "特定商取引に関する表記","#"
