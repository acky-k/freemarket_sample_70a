.head-logo
  =image_tag '/assets/logo.png', class:"logo"

.seller
  .seller__in
    .seller__in__item
      .seller__in__item__image
        .seller__in__item__image__text
          %h2 出品画像
          %span 必須
        .seller__in__item__image__images
          %p 最大3枚までアップロードできます
        .form
          %label
            = icon('fas', 'camera', class: 'icon')
            %input.form-file{:type => "file", :maximage => "3", :name => "avatar", :accept => ".png, .jpg, .jpeg, .pdf, .doc"}
      .seller__in__item__name
        .seller__in__item__name__text
          %h2 商品名
          %span 必須
        .seller__in__item__name__message
          %input.seller__in__item__name__message__input{:name => "item", :placeholder => "40文字まで", :type =>"text", :value => "", :maxlength => "40", :required => "required"}/

    .seller__in__details
      .seller__in__details__text
        %h2 商品説明
        %span 必須
      .seller__in__details__product
        -# =form_for @item do |f|
        %textarea{class: 'seller__in__details__product__input', placeholder: '商品の説明。(必須 1,000文字以内)&#13;&#10;(色、素材、重さ、低下、注意点など)&#13;&#10;&#13;&#10;例）2010年ごろに1万円で購入したジャケットです。&#13;&#10; 食べ物をこぼしてしまい、目立つ汚れがあります。'.html_safe, cols:'40', rows:'4', type: 'text', value: '', maxlength: '1000', required: 'required'}
    .seller__in__genre
      %P 商品の詳細
      .seller__in__genre__categoly
        %h2 カテゴリー
        %span 必須
      .seller__in__genre__input  
        %select.seller__in__genre__input__form{:name => "categoly", :placeholder => "カテゴリーを選択してください。", :type =>"text", :value => "", :required => "required"}
          %option{:value => "0"} 選択してください　　　　　　　　　　　
          %option{:value => "1"} レディース
          %option{:value => "2"} メンズ
          %option{:value => "3"} ベビー・キッズ
          %option{:value => "4"} インテリア・住まい・小物
          %option{:value => "5"} 本・音楽・ゲーム
          %option{:value => "6"} おもちゃ・ホビー・グッズ
      .seller__in__genre__brand
        %h3 ブランド（任意）
        %input.seller__in__genre__brand__input{:name => "brand", :placeholder => "ブランド名を入力してください。", :type =>"text", :value => ""}/
    .seller__in__status
      .seller__in__status__item
        %h2 商品の状態
        %span 必須
      .seller__in__status__input
        %input.seller__in__status__input__text{:name => "itemnstatus", :placeholder => "商品の状態を入力してください。", :type =>"text", :value => "", :required => "required"}/
